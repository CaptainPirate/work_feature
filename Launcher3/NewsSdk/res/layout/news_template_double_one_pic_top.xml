<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/news_layout_template_content_part_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_list_item_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/news_common_margin_left_right"
            android:paddingRight="6dp"
            android:paddingTop="@dimen/news_common_margin_top_bottom"
            android:paddingBottom="18dp">

            <include
                layout="@layout/news_content_pic_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginRight="10dp"/>

            <include
                layout="@layout/news_template_title_and_tts_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/news_common_margin_left_right"
                android:layout_marginRight="10dp"/>

            <include
                layout="@layout/news_template_news_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/news_common_margin_top_bottom"
            android:layout_marginBottom="@dimen/news_common_margin_top_bottom"
            android:background="@color/news_item_divider_color" />

        <LinearLayout
            android:id="@+id/news_layout_template_content_part_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_list_item_bg"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="7dp"
            android:paddingTop="@dimen/news_common_margin_top_bottom"
            android:paddingBottom="18dp">

            <include
                layout="@layout/news_content_pic_view"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginRight="10dp"/>

            <include
                layout="@layout/news_template_title_and_tts_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/news_common_margin_left_right"/>

            <include
                layout="@layout/news_template_news_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/news_common_margin_left_right"
        android:layout_marginRight="@dimen/news_common_margin_left_right"
        android:background="@color/news_item_divider_color" />

</LinearLayout>
