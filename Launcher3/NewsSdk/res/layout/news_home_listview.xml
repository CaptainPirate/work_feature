<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.iflytek.news.ui.common.HomeXListView
        android:id="@+id/news_homelistview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:listSelector="@null"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@drawable/news_listview_scrollbar"
        android:scrollbarTrackVertical="@null"
        android:overScrollMode="never"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/news_layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_app"
            android:textColor="@color/news_tip_text_color"
            android:textSize="23sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/news_text_view_news_load_fail_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="@string/news_load_error_tip"
            android:textColor="@color/news_tip_text_color"
            android:textSize="14sp"
            android:visibility="invisible" />

    </LinearLayout>

</merge>