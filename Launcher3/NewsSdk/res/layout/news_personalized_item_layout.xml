<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/news_list_selector">

        <TextView
            android:id="@+id/news_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.7dp"
            android:textColor="#333333"
            android:textSize="16.7dp" />

        <ImageView
            android:id="@+id/news_check_state"
            android:layout_width="24.7dp"
            android:layout_height="24.7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.7dp"
            android:src="@drawable/news_channel_check_state" />
    </RelativeLayout>
</LinearLayout>