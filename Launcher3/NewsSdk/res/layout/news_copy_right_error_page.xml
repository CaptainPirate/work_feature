<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/news_introduction_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/news_guide_pic" />

    <TextView
        android:id="@+id/news_introduction_text"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@id/news_introduction_pic"
        android:layout_marginTop="18dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/news_introduction_text"
        android:textColor="#333333"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/news_copy_right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textColor="#959aa0"
        android:textSize="12dp" />

    <Button
        android:id="@+id/news_begin_read_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/news_copy_right_text"
        android:layout_marginBottom="45dp"
        android:background="@drawable/news_begin_read_btn_bg"
        android:text="@string/news_begin_read"
        android:textColor="#ff4d38" />
</RelativeLayout>