<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/news_layout_pop_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/news_txtview_btn_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/news_btn_popup_dislike_status"
            android:textColor="@android:color/white"
            android:textSize="@dimen/news_txtsize_btn_dislike"
            android:gravity="center"
            android:text="@string/news_no_interest" />
    </LinearLayout>

</LinearLayout>