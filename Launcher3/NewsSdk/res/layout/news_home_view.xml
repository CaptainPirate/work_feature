<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/news_home_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.iflytek.news.ui.MainPageTitle
                android:id="@+id/news_home_pager_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <com.iflytek.news.ui.main.pagenews.view.NewsListView
                android:id="@+id/news_home_news_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"/>
        </LinearLayout>

        <com.iflytek.news.ui.speech.SpeechControlView
            android:id="@+id/speech_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            layout="@layout/news_loading_news_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/news_copy_right_error_page"
            layout="@layout/news_copy_right_error_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <com.iflytek.news.ui.setting.SettingView
        android:id="@+id/news_home_setting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"/>
</merge>