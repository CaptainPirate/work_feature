<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/news_item_root"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/news_layout_template_content_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/news_common_margin_left_right"
        android:paddingRight="7dp"
        android:paddingTop="@dimen/news_common_margin_top_bottom"
        android:paddingBottom="18dp"
        android:background="@drawable/news_list_item_bg">

        <include
            layout="@layout/news_content_pic_view"
            android:layout_width="106dp"
            android:layout_height="69dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="11dp">

            <include layout="@layout/news_template_title_and_tts_view"/>

            <include layout="@layout/news_template_news_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/news_common_margin_left_right"
        android:layout_marginRight="@dimen/news_common_margin_left_right"
        android:background="@color/news_item_divider_color"/>

    <!--
    <include layout="@layout/news_template_comment"/>
    -->

</LinearLayout>
