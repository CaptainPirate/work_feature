<view xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/list_item"
	class="com.wingtech.note.list.NotesSRListItem"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="0dip"
	android:paddingLeft="0dip"
	android:paddingRight="0dip"
	android:paddingTop="0dip">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingTop="1px"
		android:paddingLeft="30dp"
		android:paddingRight="20dp">

		<!--
           <TextView
               android:id="@+id/tv_time"
               android:layout_width="@dimen/list_item_time_width"
               android:layout_height="@dimen/list_item_time_heigth"
               android:gravity="center"
               android:singleLine="true"
               android:textAppearance="@style/TextAppearance.List.SRItem" />
               -->

		<LinearLayout
			android:id="@+id/text_display"
			android:layout_width="0.0dip"
			android:layout_height="83dp"
			android:layout_weight="23"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<com.wingtech.note.list.SnippetView
				android:id="@+id/tv_content"
				android:layout_width="fill_parent"
				android:layout_height="55dp"
				android:paddingTop="9dp"
				android:ellipsize="end"
				android:lineSpacingExtra="1dp"
				android:maxLines="2"
				android:singleLine="false"
				android:textAppearance="@style/TextAppearance.List.SRContent"
				android:textColor="#3c3c3c" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="27dp"
				android:paddingBottom="8dp"
				>
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tv_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:gravity="center_vertical"
					android:singleLine="true"
					android:textColor="#6f6f6f" />
				<ImageView
					android:id="@+id/iv_alert_icon"
					android:layout_width="wrap_content"
					android:layout_height="14dp"
					android:layout_gravity="center"
					android:layout_marginLeft="4dp"
					android:gravity="center_vertical"
					android:src="@drawable/ic_list_alert"
					android:visibility="gone" />

			</LinearLayout>

		</LinearLayout>


		<ImageView android:id="@+id/thumbnail"
			android:layout_width="0.0dip"
			android:layout_height="83dp"
			android:layout_gravity="right"
			android:paddingLeft="9dp"
			android:layout_weight="6"
			android:gravity="center" />

		<CheckBox
			android:id="@+id/check_box_select"
			android:layout_width="wrap_content"
			android:layout_height="83dp"
			android:layout_marginLeft="14px"
			android:paddingRight="-13px"
			android:layout_gravity="right"
			android:clickable="false"
			android:focusable="false"
			android:gravity="center|right" />
	</LinearLayout>

	<FrameLayout android:id="@+id/stick"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top|right|center"
		android:layout_marginRight="0.0dip"
		android:background="@drawable/ic_grid_stick"
		android:visibility="gone" />

</view>