<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="@dimen/grid_item_height"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/grid_item_margin_bottom"
    android:layout_marginRight="@dimen/grid_item_margin_right"
    class="com.wingtech.note.list.GridFolderItem"
    android:background="@drawable/grid_folder_1" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/noteitem_folder_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_grid_folder"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Grid" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/note_indicators"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grid_indicator_layout_height"
        android:layout_alignParentBottom="true"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/grid_indicator_padding_bottom"
        android:paddingRight="@dimen/grid_indicator_padding_right" >

        <include layout="@layout/grid_item_indicators" />
    </LinearLayout>

</view>