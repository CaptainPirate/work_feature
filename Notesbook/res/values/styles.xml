<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NoteTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionModeBackground">@drawable/grid_title_bar_root_bg2</item>
        <item name="android:actionModeSplitBackground">@drawable/grid_title_bar_foot_bg2</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_grid_close</item>
        <item name="android:actionModeCloseButtonStyle">@style/CloseButtonStyle</item>
    </style>
