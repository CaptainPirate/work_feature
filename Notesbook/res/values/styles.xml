    <style name="actionbarSplitMenu">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundSplit">@drawable/grid_title_bar_foot_bg</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NoteTheme.Edit" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarSize">70dip</item>
        <item name="android:toolbarStyle">@style/NoteToolbar</item>
        <item name="android:actionModeBackground">@drawable/edit_sketch_title</item>
        <item name="android:actionModeCloseButtonStyle">@style/CloseButtonStyle</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_sketch_back</item>
        <item name="android:textCursorDrawable">@drawable/v5_text_cursor_holo</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/NoteActionBar</item>
    </style>

    <style name="NoteActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:displayOptions"></item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoteToolbar" parent="@android:style/Widget.Material.Toolbar">
     <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="CloseButtonStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoteTheme.List" parent="@style/NoteTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textColorLink">@color/editor_defalut_link_textcolor</item>
    </style>

    <style name="TextAppearance.Editor.Info" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
    </style>

    <style name="TextAppearance.Title.Large" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_title_size_large</item>
    </style>

    <style name="TextAppearance.Title.Medium" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_title_size_medium</item>
    </style>

    <style name="TextAppearance.Title.Small" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_title_size_small</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_title_size_small</item>
    </style>

    <style name="TextAppearance.HighLight" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">@color/editor_highlight</item>
    </style>

    <style name="TextAppearance.Grid" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.List.Indicators" parent="TextAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.List.SRItem" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="TextAppearance.List.SRContent" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.GridText" parent="widget"></style>

    <style name="ColorSelector">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingBottom">0dip</item>
    </style>

    <style name="SketchColorSelector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_sketch_color_pick_checkbox</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SketchWidthShower">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="Widget.AttachmentItem" parent="widget"></style>

    <style name="TextAppearance_Editor_Super" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_super</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Normal" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance_Editor_Medium" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Large" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Text_White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="centered">true</item>
        <item name="fillColor">#FF888888</item>
        <item name="strokeColor">#FF000000</item>
        <item name="radius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="TextAppearance_Editor_Attachment" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PickColorItem">
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>
    <style name="TextAppearance_Editor_Super_Dialog">
        <item name="android:textSize">@dimen/text_font_size_super</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Normal_Dialog">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Medium_Dialog">
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance_Editor_Large_Dialog">
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance.note.Title" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NotesBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.note.Title</item>
    </style>

    <style name="Theme.Text_Note_TCT" parent="@android:style/Theme.DeviceDefault.Settings">
